---
import ReactCounter from './react/Counter.jsx';
import SolidCounter from './solid/Counter.jsx';
import PreactCounter from './preact/Counter.jsx';
import VueCounter from './vue/Counter.vue';

const title = Astro.props.title ?? 'Hello World!';
---

<div id="container">
  <h2>{title}</h2>
  <p>This is astro component!</p>
  <ReactCounter client:load />
  <SolidCounter client:load />
  <PreactCounter client:load />

  <!-- Vue parser appears to be broken at the moment as of Astro 5.5.3 -->
  <!-- <VueCounter client:load /> -->
</div>

<style>
  #container {
    border: 2px solid hotpink;
  }
</style>
